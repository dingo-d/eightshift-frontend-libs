{
	"$schema": "./../../../../node_modules/@eightshift/frontend-libs/schemas/block.json",
	"active": true,
	"blockName": "group",
	"title": "Group",
	"description" : "Group block used to grouping multiple blocks.",
	"category": "eightshift",
	"icon": {
		"src": "es-group"
	},
	"keywords": [
		"container",
		"section",
		"group"
	],
	"example": {
		"innerBlocks": [
			{
				"name": "eightshift-boilerplate/heading",
				"attributes": {
					"headingHeadingContent": "Lorem ipsum dolor sit amet"
				}
			},
			{
				"name": "eightshift-boilerplate/paragraph",
				"attributes": {
					"paragraphParagraphContent": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam aliquam est id semper aliquet. Aenean accumsan lacus justo, a lacinia turpis semper condimentum. "
				}
			}
		]
	},
	"hasInnerBlocks": true,
	"attributes": {
		"groupGutterLarge": {
			"type": "integer"
		},
		"groupGutterDesktop": {
			"type": "integer"
		},
		"groupGutterTablet": {
			"type": "integer"
		},
		"groupGutterMobile": {
			"type": "integer"
		}
	},
	"responsiveAttributes": {
		"groupGutter": {
			"large": "groupGutterLarge",
			"desktop": "groupGutterDesktop",
			"tablet": "groupGutterTablet",
			"mobile": "groupGutterMobile"
		}
	},
	"variables": {
		"groupGutter": [
			{
				"inverse": true,
				"variable": {
					"wrapper-scoped-gutter": "calc(%value% * 1%)"
				}
			}
		]
	}
}
